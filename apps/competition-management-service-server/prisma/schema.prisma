datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Judge {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Participant {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Leaderboard {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  points    Int?
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  updatedAt DateTime @updatedAt
}

model Team {
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  leaderboards Leaderboard[]
  name         String?
  participants Participant[]
  updatedAt    DateTime      @updatedAt
}

model Challenge {
  attachments Json?
  createdAt   DateTime     @default(now())
  description String?
  id          String       @id @default(cuid())
  points      Int?
  submissions Submission[]
  track       Track?       @relation(fields: [trackId], references: [id])
  trackId     String?
  typeField   String?
  updatedAt   DateTime     @updatedAt
}

model Submission {
  challenge   Challenge? @relation(fields: [challengeId], references: [id])
  challengeId String?
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  link        String?
  updatedAt   DateTime   @updatedAt
}

model Track {
  brand      String?
  challenges Challenge[]
  createdAt  DateTime    @default(now())
  id         String      @id @default(cuid())
  updatedAt  DateTime    @updatedAt
}

model User {
  createdAt    DateTime      @default(now())
  email        String?       @unique
  firstName    String?
  id           String        @id @default(cuid())
  judges       Judge[]
  lastName     String?
  participants Participant[]
  password     String
  role         String?
  roles        Json
  updatedAt    DateTime      @updatedAt
  username     String        @unique
}
